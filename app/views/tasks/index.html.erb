  <h1>My Tasks</h1>
    <% @tasks.each do |task| %>
      <p> <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task)  %>
      -
      <%= link_to "Delete this task", 
        task_path(task), 
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      </p>
    <% end %>

<%= link_to "Add a new task", tasks_new_path %>